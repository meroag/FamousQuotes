@page
@using FamousQuotes.Models.Helpers
@model FamousQuotes.Pages.Admin.ReviewUserAchievementsModel
@{
    ViewData["Title"] = "User Achievements";
    Layout = "Shared/_LayoutAdmin";
}

<form method="post">
    <div style="display: flex">
        <div>
            <label for="fromDate">Start date:</label>
            <input asp-for="DateFrom.Date" id="fromDate">
        </div>
        <div>
            <label for="toDate">End date:</label>
            <input asp-for="DateFrom.Date" id="toDate">
        </div>
        <button value="filter" type="submit" class="btn-outline-info"/>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Start Time</th>
            <th scope="col">End Time</th>
            <th scope="col">User</th>
            <th scope="col">Quotes</th>
            <th scope="col">Answer</th>
            <th scope="col">Was Correct</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Data != null)
        {
            foreach (UserQuizViewModel item in Model.Data)
            {
                <tr>
                    <td>@item.Date</td>
                    <td>@item.StartTime</td>
                    <td>@item.EndTime</td>
                    <td>@item.Users</td>
                    <td>@item.Quotes</td>
                    <td>@item.QuotesAuthors</td>
                    <td>@item.WasCorrect</td>
                </tr>
            }
        }
    </tbody>
</table>
